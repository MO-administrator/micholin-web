---
import Brand from "./Brand.astro";
import Navbar from "./Navbar.astro";
import Menu from "./Menu.astro";
import { SITE_NAME } from "../constants";

const [first, second] = SITE_NAME.split(" ");
---

<section
  role="row"
  aria-label="header"
  class:list={[
    "header",
    "w-dvw",
    "mt-0",
    "flex",
    "flex-row",
    "justify-evenly",
    "place-items-center",
  ]}
>
  <Brand>
    <Fragment>
      <span class="text-violet-400 text-opacity-70">
        {first}
      </span>
      &nbsp;
      <span class="text-green-400 text-opacity-70">
        {second}
      </span>
    </Fragment>
  </Brand>
  <Navbar />
  <Menu />
</section>
