---
type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<section class="container">
  <div class="wrapper">
    <div class="wrapper-left">
      <h1>{title || Astro.site?.hostname}</h1>
      <slot name="description" />
    </div>
    <div class="wrapper-right">
      <slot />
      <slot name="cta" />
    </div>
  </div>

  <style lang="scss">
    .wrapper {
      @apply grid grid-flow-row py-20 justify-center contain-content
             place-items-center bg-gradient-to-br rounded-b-3xl rounded-t-xl
             border-2 border-b-slate-800 border-r-slate-800 shadow-green-600 shadow-xl
             lg:grid lg:grid-cols-2 lg:grid-flow-row lg:gap-8;
      &-left {
        @apply grid gap-2 min-h-52;
        h1 {
          @apply text-center text-blue-100 text-6xl mb-8 capitalize;
        }
      }
      &-right {
        @apply grid place-items-center gap-8;
      }
    }
  </style>
</section>
