---
type Props = {
  date: Date;
  yearOnly?: boolean;
};

const { date, yearOnly } = Astro.props;
const options: Intl.DateTimeFormatOptions = yearOnly
  ? { year: "numeric" }
  : { dateStyle: "medium" };
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString(undefined, { ...options })}
</time>
