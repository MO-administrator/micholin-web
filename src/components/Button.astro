---
export type Props = {
  id?: string;
  href?: string;
  class?: string;
  onclick?: string;
}

const { props } = Astro;

const Element = props.href ? "a" : "button";
---

<Element class="button" {...props}>
  <slot />
</Element>

<style lang="scss">
  .button {
    @apply p-2 px-5 rounded-3xl border-4
    shadow-black shadow-sm
    bg-slate-800 cursor-pointer
    transition duration-300 ease-in-out
    hover:bg-slate-900 hover:border-green-500 hover:text-green-500
    hover:opacity-90 hover:scale-110;
  }
</style>
