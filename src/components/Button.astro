---
export interface Props {
  id?: string;
  href?: string;
}

const { props } = Astro;

const Element = props.href ? "a" : "button";
---

<Element
  {...props}
  class:list={[
    "px-5",
    "py-2",
    "rounded-3xl",
    "border-4",
    "shadow-black",
    "shadow-sm",
    "bg-slate-800",
    "hover:bg-slate-900",
    "hover:border-green-500",
    "hover:text-green-500",
    "cursor-pointer",
    "transition",
    "duration-300",
    "ease-in-out",
  ]}
>
  <slot />
</Element>
