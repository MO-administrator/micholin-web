---
import Back from "./Button:Back.astro";
---

<section
  class="container bg-gradient-to-bl relative rounded-xl max-h-dvh overflow-y-scroll xl:max-w-screen-xl"
>
  <Back />
  <div class="grid grid-cols-1 xl:grid-cols-2 xl:place-items-center">
    <div class="block w-auto order-2 xl:order-1 xl:h-auto xl:pl-8">
      <slot name="content" />
    </div>
    <div class="block object-contain order-1 xl:order-2 xl:max-h-96">
      <slot name="cover-image" />
    </div>
    <slot />
  </div>
</section>
