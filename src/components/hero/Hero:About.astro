---
import Hero from './Hero.astro'
import { heroMap } from './hero.service';
import Typed from '../typed/Typed.svelte';
const heroAbout = heroMap.get('about');
if(!heroAbout) return Astro.redirect('/');
const { title, description } = heroAbout;
---

<Hero {title}>
  <Fragment slot="description">
    <Typed
      client:only="svelte"
      strings={description}
      options={{ typeSpeed: 1, backDelay: 2e3 }}
    />
  </Fragment>
</Hero>
