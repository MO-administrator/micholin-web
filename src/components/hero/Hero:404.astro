---
import { Icon } from 'astro-icon/components'
import Hero from './Hero.astro'
import Typed from '../typed/Typed.svelte'
import { heroMap } from './hero.service';
const heroNotFound = heroMap.get('404');
if(!heroNotFound) return Astro.redirect('/')
const { title, description, image } = heroNotFound;
---

<Hero title={title}>
  <Fragment slot="description">
    <Typed
      client:only="svelte"
      strings={description}
      options={{ loop: false }}
    />
  </Fragment>
  {image && <Icon name={image} size={100} color="#ffae32" />}
</Hero>
