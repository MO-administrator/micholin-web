---
import styles from "./detail.module.scss";
import ButtonBack from "@components/button/Button:Back.astro";
import Prose from '../Prose.astro';

type Props = { title?: string };

const { title = "" } = Astro.props;
---

<section class={styles.wrapper}>
  <div class={styles.wrapper__content}>
    <ButtonBack />
    <div class={styles.wrapper__content__grid}>
      <div class={styles.wrapper__content__grid__showcase}>
        <slot name="cover-image" />
      </div>
      {title && <h1 class={styles.wrapper__content__grid__title}>{title}</h1>}
      <div class={styles.wrapper__content__grid__body}>
        <Prose>
          <slot name="content" />
        </Prose>
      </div>
    </div>
    <slot />
  </div>
</section>
