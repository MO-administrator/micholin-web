  class:list={[
    "flex",
    "place-items-center",
    "my-2",
    "mr-2",
    "p-1",
    "px-2",
    "text-xs",
    "rounded-full",
    "border-2",
    "text-slate-800",
    "border-slate-800",
    "bg-blue-100",
  ]}
>
