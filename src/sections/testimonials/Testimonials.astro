---
import { testimonials } from './testimonials.service';
import styles from "./testimonials.module.scss";
import CardTestimonial from "../../components/card/Card:Testimonial.astro";
---

<section class={styles.wrapper}>
  <div class={styles.wrapper__container}>
    <ul class={styles.wrapper__container__testimonials}>
      {testimonials.map((testimonial) => <CardTestimonial {...testimonial} />)}
    </ul>
  </div>
</section>
