generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model posts {
  xata_version   Int      @default(0)
  xata_createdat DateTime @default(now()) @db.Timestamptz(6)
  xata_updatedat DateTime @default(now()) @db.Timestamptz(6)
  xata_id        String   @unique(map: "_pgroll_new_posts_xata_id_key") @default(uuid())
  author         String?
  users          users?   @relation(fields: [author], references: [xata_id], onDelete: Restrict, onUpdate: NoAction, map: "author_link")
}

model users {
  xata_version   Int      @default(0)
  xata_createdat DateTime @default(now()) @db.Timestamptz(6)
  xata_updatedat DateTime @default(now()) @db.Timestamptz(6)
  xata_id        String   @unique(map: "_pgroll_new_users_xata_id_key") @default(uuid())
  email          String   @id
  hash           String   @db.VarChar(244)
  posts          posts[]
}

model todos {
  xata_version   Int      @default(0)
  xata_createdat DateTime @default(now()) @db.Timestamptz(6)
  xata_updatedat DateTime @default(now()) @db.Timestamptz(6)
  xata_id        String   @unique(map: "_pgroll_new_todos_xata_id_key") @default(uuid())
  title          String   @id
  description    String   @db.VarChar(244)
  tasks          String[] @default([])
}
